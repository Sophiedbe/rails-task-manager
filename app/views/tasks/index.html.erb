
<div class="container mt-5">
  <h1 class="mb-4">My Tasks</h1>

  <div class="list-group">
    <% @tasks.each do |task| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong>
            <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
          </strong>
        </div>
        <div>
          <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "âž• Add a new task", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
